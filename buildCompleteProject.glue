delete project parvoviridae
create project parvoviridae "A GLUE project for the Parvoviridae" --minVersion 0.1.66

# Create the database schema
schema-project parvoviridae
  run file glue/build/core/parvoSchemaExtensions.glue
  run file glue/build/core/parvoSchemaExtensionsPaleovirus.glue
  exit


# Load project settings
project parvoviridae
  run file glue/build/core/parvoProjectSettings.glue
  exit


# Build the core project for family Parvoviridae (Genus master references only)
project parvoviridae
  run file glue/build/core/buildParvoCoreProject.glue
  exit



# Build genus-level extensions (Each includes representatives of all species within the genus)
project parvoviridae

  # Parvovirinae
  run file glue/build/genus/ave/buildAveProject.glue
  run file glue/build/genus/boca/buildBocaProject.glue

  run file glue/build/genus/amdo/buildAmdoProject.glue
  run file glue/build/genus/proto/buildProtoProject.glue

  run file glue/build/genus/erythro/buildErythroProject.glue
  run file glue/build/genus/dependo/buildDependoProject.glue
  run file glue/build/genus/copi/buildCopiProject.glue
  run file glue/build/genus/tetra/buildTetraProject.glue

  # Hamaparvovirinae
  run file glue/build/genus/chaphama/buildChaphamaProject.glue
  run file glue/build/genus/ichthama/buildIchthamaProject.glue

  # Create the recursively populated subfamily phylogeny with viruses only
  run file glue/build/core/parvovirinaeCreatePhylogenies.glue
  run file glue/build/core/parvovirinaeRerootPhylogenies.glue
  run file glue/build/core/parvovirinaePhylogeniesExportAnnotations.glue

  exit



# Build paleovirus extensions for each genus that has EVE representatives
project parvoviridae

  # Parvovirinae EVEs
  run file glue/build/eve/amdo/buildAmdoPaleoProject.glue
  run file glue/build/eve/proto/buildProtoPaleoProject.glue

  run file glue/build/eve/erythro/buildErythroPaleoProject.glue
  run file glue/build/eve/dependo/buildDependoPaleoProject.glue
  run file glue/build/eve/unc-parvo/buildUncParvoPaleoProject.glue

  # Hamaparvovirinae EVEs
  run file glue/build/eve/ichthama/buildIchthamaPaleoProject.glue

  # Create the recursively populated subfamily phylogeny with EVEs included
  run file glue/build/core/epvCreateRootPhylogenies.glue
  run file glue/build/core/epvRerootPhylogenies.glue
  run file glue/build/core/epvRootPhylogeniesExportAnnotations.glue
  
  exit


